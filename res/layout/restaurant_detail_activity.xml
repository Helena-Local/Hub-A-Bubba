                    <!--android:id="@+id/productLayout"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:stretchColumns="*"-->
                    <!--android:background="@drawable/card_background"-->
