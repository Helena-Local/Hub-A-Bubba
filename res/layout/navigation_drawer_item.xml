<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/drawerItemTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:minHeight="@dimen/navigation_drawer_item_minimum_height"
        android:paddingStart="@dimen/navigation_drawer_item_padding_start"
        android:paddingEnd="@dimen/navigation_drawer_item_padding_end"
        android:layout_marginLeft="@dimen/navigation_drawer_item_padding_start"
        android:layout_marginRight="@dimen/navigation_drawer_item_padding_end"
        android:text="Drawer Item"/>

</LinearLayout>