<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="clickableItemBackground">@android:drawable/list_selector_background</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="cardListView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>

    <style name="horizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="verticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="activity_header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/activity_info_header_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="activity_welcome_text" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="default_list_item_imageview">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="medium_list_item_imageview">
        <item name="android:layout_width">@dimen/medium_list_item_image_width</item>
        <item name="android:layout_height">@dimen/medium_list_item_image_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginRight">@dimen/medium_list_item_image_margin_right</item>
    </style>

    <style name="list_item_text_primary" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="list_item_text_secondary" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>


    <style name="detailActivityQuote" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="detailActivitySectionHeader" parent="android:TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2.5dp</item>
    </style>

    <style name="ActionContainer">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">?attr/clickableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ActionContainerLeft" parent="ActionContainer">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/action_container_left_padding_left</item>
        <item name="android:paddingRight">@dimen/action_container_left_padding_right</item>
    </style>

    <style name="ActionContainerCenter" parent="ActionContainer">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/action_container_center_padding_left</item>
        <item name="android:paddingRight">@dimen/action_container_center_padding_right</item>
    </style>

    <style name="ActionContainerRight" parent="ActionContainer">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/action_container_right_padding_left</item>
        <item name="android:paddingRight">@dimen/action_container_right_padding_right</item>
    </style>

    <style name="ActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textColor">@color/helena_local_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
